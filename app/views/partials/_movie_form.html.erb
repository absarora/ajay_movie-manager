<%= form_for [@collection, @movie] do |f| %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
      </div>
      
      <div class="form-group">
        <%= f.label :format %>
        <%= f.select :format, ['VHS','DVD','Streaming'], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :length, class: 'form-control', placeholder: 'Length' %>
      </div>
      <div class="form-group">
        <%= f.text_field :year, class: 'form-control', placeholder: 'Year' %>
      </div>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.hidden_field :rating, value: 'null', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.radio_button :rating, '1' %>
        <%= label :rating_1, '1' %>
      </div>
      <div class="form-group">
        <%= f.radio_button :rating, '2' %>
        <%= label :rating_2, '2' %>
      </div>
      <div class="form-group">
        <%= f.radio_button :rating, '3' %>
        <%= label :rating_3, '3' %>
      </div>
      <div class="form-group">
        <%= f.radio_button :rating, '4' %>
        <%= label :rating_4, '4' %>
      </div>
      <div class="form-group">
        <%= f.radio_button :rating, '5' %>
        <%= label :rating_5, '5' %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>