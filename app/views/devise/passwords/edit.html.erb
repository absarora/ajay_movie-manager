<div class='container'>
  <h1>Change your password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { :class => 'form-horizontal',method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class='row'>
      <div class='col-sm-4'>
        <div class='column col-sm-12'>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: 'New password', autofocus: true %>
          </div>
        </div>
        
        <div class='column col-sm-12'>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', autocomplete: "off" %>
          </div>
        </div>

        <div class='column col-sm-12'>
          <div class="form-group">
            <%= f.submit "Change my password", class: 'btn btn-primary btn-default' %>
          </div>
        </div>

        <div class='column col-sm-12'>
          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>