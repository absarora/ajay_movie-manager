<div class="container">
  <h1 class="align-glyphicon"><%= @collection.title %></h1>

  <% if policy(@collection).edit? %>
    <p class="align-glyphicon">
      <%= link_to edit_collection_path, class: 'btn btn-mini' do %>
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
    </p>
  <% end %>

  <% if policy(@collection).destroy? %>
    <p class="align-glyphicon">
      <%= link_to @collection, method: :delete, data: {confirm: 'Are you sure you want to delete this topic?'}, class: 'btn btn-mini' do %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>
    </p>
  <% end %>

  <% if current_user %>
  <p><%= link_to 'New Movie', new_collection_movie_path(@collection), class: 'btn btn-primary' %></p>
  <% end %>
  </br>
  <div class="table-responsive">
  <table id="product_lists">
    <thead>
      <tr>
        <th class="head-title">Title</th>
        <th>Format</th>
        <th>Length</th>
        <th>Year</th>
        <th>Rating</th>
      </tr>
    </thead>

    <tbody>  
      <% @collection.movies.each do |movie| %>
        <tr>
          <td class="movie-title"><%= link_to movie.title, [@collection, movie] %></td>
          <td><%= movie.format %></td>
          <td><%= format("%2d hr %02d min", movie.length/60, movie.length % 60) %></td>
          <td><%= movie.year %></td>
          <td><%= movie.rating %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>